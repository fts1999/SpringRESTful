pipeline{
    
    agent any
    tools {maven 'MavenV3'}
    stages{
        
        stage('checkout'){
            
            steps{
                
                git branch: 'main',  url: 'https://github.com/fts1999/SpringPetClinic.git'
            }
        }
        
        stage('build'){
            
            steps{
                
                sh 'mvn compile'
            }
        }
        
        stage('test'){
            
            steps{
                
                sh 'mvn test'
            }
        }
        
     
    }
}
